@model IEnumerable<TestCases>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestCaseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestCaseLink)
            </th>
            <th></th>
        </tr>
    </thead>

        @if (Model.Count() > 0) {
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestCaseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestCaseLink)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TestCaseNumber">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TestCaseNumber">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TestCaseNumber">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        }

</table>

@if(Model.Count() <= 0) {
    <h1>No record</h1>
}
