@model IEnumerable<TestoMVC.Models.TestCases>

@{
    ViewData["Title"] = "Tasks Setup";
}

<h1>Tasks Setup</h1>

<p>
    <a asp-action="Create">Create New Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestCaseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestCaseLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model.Count() > 0) {
    
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TestCaseName)
                </td>
                <td>
                    @{ 
                    @if (item.TestCaseLink.Count() < 80)
                    {
                        <p><a target="_blank" href="@item.TestCaseLink">@item.TestCaseLink</a></p>
                    }
                    else
                    {
                        <p><a target="_blank" href="@item.TestCaseLink">@item.TestCaseLink.Substring(0,70) ...</a></p>
                    }
                    }
                        @* Html.DisplayFor(modelItem => item.TestCaseLink) *@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TestCaseNumber">Edit</a> |
                    @* <a asp-action="Details" asp-route-id="@item.TestCaseNumber">Details</a> | *@
                    <a asp-action="DeleteTask" asp-route-id="@item.TestCaseNumber">Delete</a>
                </td>
            </tr>
    }
}
    </tbody>
    
</table>

@if (Model.Count() <= 0) {
    <h1 style="text-align: center;">No Record</h1>
}